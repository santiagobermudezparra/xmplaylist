  "build": {
    "context": "..",
    "dockerfile": "Dockerfile"
  },
  "postCreateCommand": ".devcontainer/run-setup.sh",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "containerEnv": {
    "MISE_TRUSTED_CONFIG_PATHS": "*"
